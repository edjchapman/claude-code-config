{
  "_source": "kubernetes",
  "_version": 1,
  "_note": "Kubernetes, Helm, and Kustomize commands for container orchestration",
  "permissions": {
    "allow": [
      "Bash(kubectl get:*)",
      "Bash(kubectl describe:*)",
      "Bash(kubectl logs:*)",
      "Bash(kubectl exec:*)",
      "Bash(kubectl apply:*)",
      "Bash(kubectl delete:*)",
      "Bash(kubectl create:*)",
      "Bash(kubectl edit:*)",
      "Bash(kubectl scale:*)",
      "Bash(kubectl rollout:*)",
      "Bash(kubectl port-forward:*)",
      "Bash(kubectl config:*)",
      "Bash(kubectl cluster-info:*)",
      "Bash(kubectl top:*)",
      "Bash(kubectl api-resources:*)",
      "Bash(kubectl explain:*)",
      "Bash(kubectl diff:*)",
      "Bash(kubectl patch:*)",
      "Bash(kubectl label:*)",
      "Bash(kubectl annotate:*)",
      "Bash(kubectl auth:*)",
      "Bash(helm install:*)",
      "Bash(helm upgrade:*)",
      "Bash(helm uninstall:*)",
      "Bash(helm list:*)",
      "Bash(helm repo:*)",
      "Bash(helm search:*)",
      "Bash(helm show:*)",
      "Bash(helm template:*)",
      "Bash(helm status:*)",
      "Bash(helm history:*)",
      "Bash(helm rollback:*)",
      "Bash(helm lint:*)",
      "Bash(helm dependency:*)",
      "Bash(kustomize build:*)",
      "Bash(kustomize edit:*)",
      "Bash(kubectl kustomize:*)",
      "Bash(kubectx:*)",
      "Bash(kubens:*)",
      "Bash(stern:*)",
      "Bash(k9s:*)",
      "WebFetch(domain:kubernetes.io)",
      "WebFetch(domain:helm.sh)",
      "WebFetch(domain:kustomize.io)",
      "WebFetch(domain:artifacthub.io)"
    ],
    "deny": [
      "Bash(kubectl delete namespace kube-system:*)",
      "Bash(kubectl delete all --all -A:*)",
      "Bash(helm uninstall --all:*)"
    ]
  }
}
